<div class="container shopCart">
    <a href="/">На главную</a>
    <h1>Корзина</h1>
    <div class="row">
        <div class="col-xl-12">
        {{#if cartItems}}
            <ul>
                <li class="top">
                    <div>
                        <strong>Фото</strong>
                    </div>
                    <div>
                        <strong>Название товара</strong>
                    </div>
                    <div>
                        <strong>Цена</strong>
                    </div>
                    <div>
                        <strong>Кол-во</strong>
                    </div>
                    <div>
                        <strong>Сумма</strong>
                    </div>
                </li>
            {{#each cartItems}}
                <li>
                    <div class="image">
                        <img width="100" src="/uploads/{{image}}" alt="">
                    </div>
                    <div class="name">
                        <h3>{{name}}</h3>
                    </div>
                    <div class="price">
                        {{price}} <span>руб.</span>
                    </div>
                    <div class="qty">
                        <form action="/shopCart/addQty/{{id}}" method="post">
                            <input type="text" name="qty" value="{{qty}}">
                            <button type="submit">пересчитать</button>
                        </form>
                    </div>
                    <div class="sum">
                        {{summ}} руб.
                        <a href="/shopCart/productDelete/{{id}}"><img width="30" src="/img/Close-512.png" alt=""></a>
                    </div>
                </li>
            {{/each}}
            </ul>
            <div class="totalPrice">
                <h3>Всего {{totalPrice}} руб.</h3>
            </div>
            <div class="sendForm">
                <form action="/sendToEmail" method="post">
                    <input type="text" name="email" placeholder="Введите Email">
                    <button class="btn" type="submit">Сделать заказ</button>
                </form>
            </div>
        {{else}}
            В корзине нет товаров
        {{/if}}
        </div>
    </div>
</div>